@using EntitiyLayer.Concrete
@model List<Project>
@{
    ViewBag.Title = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous" />

<link href="~/Yildizİnsaat/proje.css" rel="stylesheet" />
<div class="content">
    <div class="row row-cols-1 row-cols-md-3 g-4 m-5 text-center">
        @foreach (var item in Model)
        {
            if (item.statu == true)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="~/Image/@item.projectMediaUrl" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title ">@item.projectName</h5>
                            <p class="card-text">@item.projectDescription</p>
                        </div>

                    </div>
                </div>
            }

        }


    </div>
</div>
<footer class="py-3 my-4 ">
    <ul class="nav justify-content-center pt-3 mt-5" style="font-size:18px">
        <li class="nav-item">
            <a href="~/Home/Index" class="nav-link px-2 text-dark">Anasayfa</a>
        </li>
        <li class="nav-item">
            <a href="~/Home/About" class="nav-link px-2 text-dark">Hakkımızda</a>
        </li>
        <li class="nav-item">
            <a href="~/Home/Project" class="nav-link px-2 text-dark">Projelerimiz</a>
        </li>
        <li class="nav-item">
            <a href="~/Home/Business" class="nav-link px-2 text-dark">Hizmetlerimiz</a>
        </li>
        <li class="nav-item">
            <a href="~/Home/Contact" class="nav-link px-2 text-dark">İletişim</a>
        </li>

    </ul>
    <p class="text-center text-dark mt-4">© 2022 Company, Inc</p>
</footer>