@{
    ViewBag.Title = "Home Page";
}
@using EntitiyLayer.Concrete
@model Contact

<link href="~/Yildizİnsaat/Anasayfa/anasayfastyle.css" rel="stylesheet" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2/theme-borderless@3/borderless.css">
<div class="row mb-3 mt-5">
    <!---------------------------------sol row---------------------------------------->
    <div class="col-sm-6 ">
        <div class="row m-2 mt-5 text-center">
            <h1 style="font-size: 60px;">47 yıllık inşaat tecrübemizle...</h1>
        </div>

    </div>
    <!-----------------------------------sag row-------------------------------------->
    <div class="col-sm-6 p-5 bg-black ">

        <div class="row mb-3 text-white">
            <h4>
                Projelerimizle ilgili sizi bilgilendirelim
            </h4>
        </div>
        <form method="POST" id="contactForm" name="contactForm" class="contactForm">
            
        <div class="row mb-3">
            <div class="col-sm-6">
                <div class="form-group">
                    <input type="text" id="customerName" name="customerName" class="form-control" placeholder="Adınız" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
            </div>


            <div class="col-sm-6">
                <div class="form-group">
                    <input type="text" id="customerLastName" name="customerLastName" class="form-control" placeholder="Soyadınız" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
            </div>
        </div>
            <div class="row mb-3">
                <div class="col-sm-6">
                    <div class="form-group">
                        <input type="email" id="customerMail" name="customerMail"
                               class="form-control"
                               placeholder="E-mail Adresiniz" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>

                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input type="text" id="customerPhoneNumber" name="customerPhoneNumber"
                               class="form-control"
                               placeholder="Telefon Numaranız" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-12">
                    <div class="form-group">
                        <textarea rows="4" class="form-control" id="customerMessage" name="customerMessage" placeholder="Mesajınız..." required> </textarea>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                </div>
            </div>
            <div class="row ">
                <div class="col-sm-12">
                    <div class="form-group">
                        <input type="submit" class="btn btn-dark form-control" value="Gönder" />
                        <div class="submitting"></div>
                    </div>
                </div>
            </div>
            
        </form>
      </div>
</div>






<footer class="py-3 my-4 ">
    <ul class="nav justify-content-center pt-3 mt-5 border-top " style="font-size:18px">
        <li class="nav-item">
            <a href="~/Home/Index" class="nav-link px-2 text-white">Anasayfa</a>
        </li>
        <li class="nav-item">
