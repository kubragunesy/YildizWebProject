@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using EntitiyLayer.Concrete
@model List<CompanyInfo>

<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>
<link href="~/Yildizİnsaat/iletisim/style.css" rel="stylesheet" />


<div class="content">
    <div class="container">
        <div class="row m-5">
            @foreach (var item in Model)
            {
                if (item.statu == true)
                {
                    <div class="col-md-3 mt-3 text-center text-white">

                        <div class="icon d-flex align-items-center justify-content-around ">
                            <span><img width="40" height="40" src="~/Icon/@item.logo" /></span>
                        </div>
                        <div class="text mt-3">
                            <p><span>@item.name : </span>@item.description </p>
                        </div>

                    </div>
                }
            }
        </div>
        <div class="col-md-12 ">
            <div class="row">
                <div class="col-md-7 ">
                    <div class="contact-wrap w-100 p-md-5 p-4 ">
                        <h3 class="mb-4 text-center text-white ">Bize Yazın</h3>
                        <div id="form-message-warning" class="mb-4">
                        </div>
                        <div id="form-message-success" class="mb-4">
                        </div>
                        <form method="POST" id="contactForm" name="contactForm" class="contactForm">
                            <div class="row">
                                <div class="col-md-6 mt-1">
                                    <div class="form-group">
                                        <label style="color:white;">Adınız</label>
                                        <input style="background-color:transparent;color:white;" required type="text" class="form-control rounded-0" name="customerName" id="customerName" />
                                    </div>
                                </div>
                                <div class="col-md-6 mt-1">
                                    <div class="form-group">
                                        <label style="color:white;">Soyadınız</label>
                                        <input style="background-color: transparent; color: white;" required type="text" class="form-control rounded-0" name="customerLastName" id="customerLastName">
                                    </div>
                                </div>
                                <div class="col-md-12 mt-1">
                                    <div class="form-group">
                                        <label style="color:white;">Email Adresiniz</label>
                                        <input style="background-color: transparent; color: white;" required type="email" class="form-control rounded-0" name="customerMail" id="customerMail">
                                    </div>
                                </div>
                                <div class="col-md-12 mt-1">
                                    <div class="form-group">
                                        <label style="color:white;">Telefon Numaranız</label>
                                        <input style="background-color: transparent; color: white;" required type="tel" pattern="[0-9]{11}" class="form-control rounded-0" name="customerPhoneNumber" id="customerPhoneNumber">
                                    </div>
                                </div>
                                <div class="col-md-12 mt-1">
                                    <div class="form-group">
                                        <label style="color:white;">Mesajınız</label>
                                        <textarea style="background-color: transparent; color: white;" required name="customerMessage" class="form-control rounded-0" id="customerMessage" cols="30" rows="4"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12 mt-3">
                                    <div class="form-group">
                                        <input type="submit" value="Gönder" class="btn btn-light text-dark w-100 rounded-0">
                                        <div class="alert text-white">
                                            @TempData["Mesaj"]
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-5 d-flex align-items-stretch p-5">

                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d57780.33950704853!2d29.15208021333738!3d40.91885625610919!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac4f1dd92e915%3A0x7bf91a7dd7b26dcc!2sKartal%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1667134544470!5m2!1str!2str" style="border:0; width:100%; height:100%;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                </div>
            </div>

        </div>
    </div>
</div>

<footer class="py-3 my-4 ">
    <ul class="nav justify-content-center pt-3 mt-5 border-top " style="font-size:18px">
        <li class="nav-item">
            <a href="~/Home/Index" class="nav-link px-2 text-white">Anasayfa</a>
        </li>
        <li class="nav-item">
            <a href="~/Home/About" class="nav-link px-2 text-white">Hakkımızda</a>
        </li>
        <li class="nav-item">
            <a href="~/Home/Project" class="nav-link px-2 text-white">Projelerimiz</a>
        </li>
        <li class="nav-item">
            <a href="~/Home/Business" class="nav-link px-2 text-white">Hizmetlerimiz</a>
        </li>
        <li class="nav-item">
            <a href="~/Home/Contact" class="nav-link px-2 text-white">İletişim</a>
        </li>

    </ul>
    <p class="text-center text-white mt-3">© 2022 Company, Inc</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
