@using EntitiyLayer.Concrete;
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2 class="text-center p-2">Hakkımızda</h2>
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">


<table class="table">
    <tr>
        <th> Hakkımızda ID</th>
        <th> Hakkımızda Adı</th>
        <th> Hakkımızda Açıklama</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.aboutId</td>
            <td>@item.aboutName</td>
            <td>@item.aboutDescription</td>
            <td>
                <a class="btn btn-primary" href="~/About/GuncelleAbout/@item.aboutId">Güncelle</a>
            </td>
            <td><a href="/About/SilAbout/@item.aboutId" class="btn btn-danger">SİL</a></td>
        </tr>
    }
</table>

<a href="~/About/YeniAbout/" class="btn btn-success">YENİ İÇERİK EKLE</a>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.2.1/dist/jquery.min.js"></script>
