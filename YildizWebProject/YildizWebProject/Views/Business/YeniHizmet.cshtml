@using EntitiyLayer.Concrete
@model Business
@{
    ViewBag.Title = "YeniHizmet";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h2 class="text-center">Hizmet Ekle</h2>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

<div class="container-fluid">


    @using (Html.BeginForm("YeniHizmet", "Business", FormMethod.Post, new
    { @class = "form-group" }))
    {

        @Html.Label("Hizmet Adı")
        <br />
        @Html.TextBoxFor(x => x.businessName, new { @class = "form-control" })
        <div id="businessName" class="validation-container">
            @Html.ValidationMessageFor(x => x.businessName, null, new { @class = "text-danger" })
        </div>
        <br />
        @Html.Label("Hizmet Açıklaması")
        <br />
        @Html.TextBoxFor(x => x.businessDescription, new { @class = "form-control" })
        <div id="businessDescription" class="validation-container">
            @Html.ValidationMessageFor(x => x.businessDescription, null, new { @class = "text-danger" })
        </div>
        <br />
        @Html.Label("Statu")
        <br />
        @*@Html.TextBoxFor(x => x.statu, new { @class = "form-control" })*@
        <div id="statu" class="validation-container">
            @*@Html.ValidationMessageFor(x => x.statu)*@
        </div>
        <select class="form-control" name="statu">
            <option value="true">Aktif</option>
            <option value="false">Pasif</option>
        </select>
        <br />
        <input type="submit" value="Ekle" class="form-control bg-success text-white" />
    }

</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>



