@using EntitiyLayer.Concrete
@model List<Business>
@{
    ViewBag.Title = "Business";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Yildizİnsaat/Hizmetlerimiz/hizmet.css" />


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
      crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
        crossorigin="anonymous">
</script>

<div class="container">
    <div class="row m-5">

        <div class="row m-3" style="font-size:16px; color: rgb(75, 74, 74);">
            <strong>
                Yapı Merkezi’nin 1975 yılında Söğütlüçeşme Demiryolu İstasyonu inşaatı ile başlayan raylı sistem serüveni,
                3.700 km ray hattı, 58 adet raylı sistem, 432 adet istasyon ile 3 kıtada her gün 3,5 milyondan fazla yolcuyu
                güvenle taşıma noktasına ulaşmıştır.

                Raylı Sistemler alanında bir dünya markası olan Yapı Merkezi, gerçekleştirdiği ESTRAM (Eskişehir Tramvayı) ile
                Uluslararası Toplu Taşıma Birliği (UITP) tarafından verilen “2004 yılı Raylı Sistem Ödülü”nü Türkiye’ye ilk defa
                taşımış; 2010 yılında yine UITP’nin “Dünya Raylı Sistem Entegrasyon Projesi” ödülünü Kayseri Hafif Raylı Sistemi
                ile almıştır. Kayseri Hafif Raylı Sistemi ayrıca, İngiltere Hafif Raylı Taşıma Sistemi Birliği (LRTA) ve onun yayın
                organı Tramways & Urban Transit Dergisi'nin “Yılın En İyi Yabancı Tramvay Sistemi-2010” ödülünün de sahibi olmuştur.
            </strong>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="accordion" id="accordionExample">

            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                        @item.businessName
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        @item.
                    </div>
                </div>
            </div>
        </div>
    }

    </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

