            <div class="col-sm-6">
                <input type="email"
                       class="form-control"
                       placeholder="E-mail Adresiniz" />
            </div>
            <div class="col-sm-6">
                <input type="text"
                       class="form-control"
                       placeholder="Telefon Numaranız" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-12">
                <textarea rows="4" class="form-control" placeholder="Mesajınız...">
          </textarea>
            </div>
        </div>
        <div class="row ">
            <div class="col-sm-12">
                <input type="button" class="btn btn-dark form-control" value="Gönder" />
            </div>
        </div>
    </div>
</div>