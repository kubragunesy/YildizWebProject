@using EntitiyLayer.Concrete
@model Contact
@{
    ViewBag.Title = "GuncelleIletisim";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-center">İletişim Güncelle</h2>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

<div class="container-fluid">


    @using (Html.BeginForm("GuncelleIletisim", "Contact", FormMethod.Post, new
    { @class = "form-group" }))
    {
        @Html.HiddenFor(x => x.customerId)
        @Html.Label("Müşteri Adı")
        <br />
        @Html.TextBoxFor(x => x.customerName, new { @class = "form-control" })
        <div id="customerName" class="validation-container">
            @*@Html.ValidationMessageFor(x => x.businessName)*@
        </div>
        <br />

        @Html.Label("Müşteri Soyadı")
        <br />
        @Html.TextBoxFor(x => x.customerLastName, new { @class = "form-control" })
        <div id="customerLastName" class="validation-container">
            @*@Html.ValidationMessageFor(x => x.businessDescription)*@
        </div>
        <br />
        @Html.Label("Müşteri Mail")
        <br />
        @Html.TextBoxFor(x => x.customerMail, new { @class = "form-control" })
        <div id="customerMail" class="validation-container">
            @*@Html.ValidationMessageFor(x => x.businessDescription)*@
        </div>
        <br />
        @Html.Label("Müşteri Telefon")
        <br />
        @Html.TextBoxFor(x => x.customerPhoneNumber, new { @class = "form-control" })
        <div id="customerPhoneNumber" class="validation-container">
            @*@Html.ValidationMessageFor(x => x.businessDescription)*@
        </div>
        <br />
        @Html.Label("Müşteri Mesaj")
        <br />
        @Html.TextBoxFor(x => x.customerMessage, new { @class = "form-control" })
        <div id="customerMessage" class="validation-container">
            @*@Html.ValidationMessageFor(x => x.businessDescription)*@
        </div>
        <br />
        @Html.Label("Statü")
        <!--@Html.TextBoxFor(x => x.statu, new { @class = "form-control" })
        <div id="statu" class="validation-container">-->
            @*@Html.ValidationMessageFor(x => x.statu)*@
        <!--</div>-->
        <br />
        <select class="form-control" name="statu">
            <option value="true">Aktif</option>
            <option value="false">Pasif</option>
        </select>
        <br />

        <input type="submit" value="Değişiklikleri Kaydet" class="form-control bg-success text-white" />
    }

</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>


