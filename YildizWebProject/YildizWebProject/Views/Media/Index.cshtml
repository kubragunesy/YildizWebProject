@using EntitiyLayer.Concrete;
@model List<Media>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <table class="table">
        <tr>
            <th scope="col">Medya ID</th>
            <th scope="col">Medya Adı</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="table-group-divider">
                <td>@item.mediaId</td>
                <td><img src="@item.mediaName" width="50px" height="50px"></img></td>
                <td>
                    <a class="btn btn-outline-danger" href="#">SİL</a>
                    <a class="btn btn-outline-primary" href="#">GÜNCELLE</a>
                </td>
            </tr>
        }
    </table>
    <a href="~/Media/YeniMedia" class="btn btn-success">YENİ MEDYA EKLE</a>
</div>
